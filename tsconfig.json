{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "noImplicitAny": false,
    "sourceMap": false,
    "allowJs": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "outDir": "./lib",
    "typeRoots": [
      "node_modules/@types/",
      "node_modules/@upe/",
      "node_modules/@akanass/"
    ],
    "types":[
      "chai",
      "node",
      "mocha",
      "rx",
      "rx-http-request",
      "typedjson"
    ]
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*"
  ]
}
